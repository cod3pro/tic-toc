<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.borhan.test.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        >

        <GridLayout
            android:id="@+id/nineViews"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/graph"
            android:columnCount="3"
            android:padding="5dp"
            android:rowCount="3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:onClick="move"
                android:tag="0" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:onClick="move"
                android:tag="1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:onClick="move"
                android:tag="2" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:onClick="move"
                android:tag="3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:onClick="move"
                android:tag="4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:onClick="move"
                android:tag="5" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:onClick="move"
                android:tag="6" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:onClick="move"
                android:tag="7" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:onClick="move"
                android:tag="8" />
        </GridLayout>

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="50"
            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/editText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="26sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/layout_bg"
                android:onClick="reset"
                android:text="Reset"
                android:textSize="36sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circle"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/nineViews"
            android:layout_alignStart="@+id/nineViews" />

        <ImageView
            android:id="@+id/leftarrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:visibility="invisible"
            app:srcCompat="@drawable/leftarrow" />

        <ImageView
            android:id="@+id/rightarrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView10"
            android:layout_toStartOf="@+id/imageView10"
            android:visibility="invisible"
            app:srcCompat="@drawable/rightarrow" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/nineViews"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/nineViews"
            app:srcCompat="@drawable/circlered" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
